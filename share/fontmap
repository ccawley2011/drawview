# System font
SYSTEM		"lucidatypewriter","fixed"				79 100

# Last resort fallback
DEFAULT		"arial","helvetica"

# Standard Acorn fonts
homerton	"arial","helvetica"
newhall		"century schoolbook l","new century schoolbook"
corpus		"courier new","courier"
trinity		"times new roman","times"

# 4Mation fonts
montclair	"arial","helvetica"
tabloid		"times new roman","times"

# Others
helvswiss	"arial","helvetica"
transport	"arial","helvetica"
newschbook	"century schoolbook l","new century schoolbook"
plantin		"book antiqua","palatino"
