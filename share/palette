# 1 bpp: black white
1	0	00000000
	1	FFFFFF00

# 2 bpp: black red yellow white
2	0	00000000
	1	0000FF00
	2	00FFFF00
	3	FFFFFF00

# 4 bpp, desktop
4	0	FFFFFF00
	1	DDDDDD00
	2	BBBBBB00
	3	99999900
	4	77777700
	5	55555500
	6	33333300
	7	00000000
	8	99440000
	9	00EEEE00
	10	00CC0000
	11	0000DD00
	12	BBEEEE00
	13	00885500
	14	00BBFF00
	15	FFBB0000

# For the standard palette, use this instead:
# 4 bpp, standard: black red green yellow blue magenta cyan white (twice)
# 4	0	00000000
# 	1	0000FF00
# 	2	00FF0000
# 	3	00FFFF00
# 	4	FF000000
# 	5	FF00FF00
# 	6	FFFF0000
# 	7	FFFFFF00
# 	8	00000000
# 	9	0000FF00
# 	10	00FF0000
# 	11	00FFFF00
# 	12	FF000000
# 	13	FF00FF00
# 	14	FFFF0000
# 	15	FFFFFF00
